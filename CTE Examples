# SQL CTE query to find the average amount paid by the top 5 customers

WITH top_countries AS 
		(SELECT D.country --subquery: top10 countries
		FROM customer A
			INNER JOIN address B ON A.address_id = B.address_id
			INNER JOIN city C ON B.city_id = C.city_id
			INNER JOIN country D ON C.country_id = D.country_id
		GROUP BY D.country_id
		ORDER BY COUNT(A.customer_id) DESC
		LIMIT 10),
	top_cities AS 
 		(SELECT C.city	--subquery: top10 cities within the top 10 countries
		FROM customer A
			INNER JOIN address B ON A.address_id = B.address_id
			INNER JOIN city C ON B.city_id = C.city_id
			INNER JOIN country D ON C.country_id = D.country_id
		WHERE (D.country) IN
			(SELECT * --subquery: top10 countries
			FROM top_countries)			
		GROUP BY D.country, 
				 C.city
		ORDER BY COUNT(A.customer_id) DESC
		LIMIT 10),
	top_customers AS
		(SELECT SUM(A.amount) AS total_amount_paid	--subquery: top5 customers, who paid most amount with in the top10 cities
		FROM payment A
			INNER JOIN customer B ON A.customer_id = B.customer_id
			INNER JOIN address C ON B.address_id = C.address_id
			INNER JOIN city D ON C.city_id = D.city_id
			INNER JOIN country E ON D.country_id = E.country_id
		WHERE D.city IN
			(SELECT *
			FROM top_cities)
		GROUP BY B.customer_id, B.first_name, B.last_name, D.city, E.country
		ORDER BY total_amount_paid DESC
		LIMIT 5)
SELECT AVG(total_amount_paid) as average
FROM top_customers;
